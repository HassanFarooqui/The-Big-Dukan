
@{
    ViewBag.Title = "ClientProducts";
}

<style>
    .my-container {
        width: 95%;
        margin: 0 auto;
    }
    .product {
        background: #000;
        height: 300px;
        color: #fff;
    }
    .product-image {
        width: 90%;
        margin: 0 auto;
        margin-top: 15px;
    }
    .product-name{
        font-weight: bold;
        margin-top: 7px;
    }
    .price{
        font-size: 1.3em;
    }
</style>

<h2>ClientProducts</h2>
<div class="my-container">
    <div class="row">
        <div class="col-md-4 col-lg-3 product" style="background: #000;">
            <div class="product-image">
                <img src="http://via.placeholder.com/300x200"/>
            </div>
            <div class="product-name">
                Lenovo
            </div>
            <div class="product-info">
                <span>ideapad 320 - Core i5-7200U</span>
                <div class="price">Rs 52,099</div>
            </div>
        </div>
    </div>
</div>

