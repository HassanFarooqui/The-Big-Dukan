@model IEnumerable<TheBigDukan.Product>

@{
    ViewBag.Title = "ProductDetailActionIndex";
}

<h2>ProductList</h2>

<p>
    <input type="submit" value="Create" class="btn btn-default" onclick="location.href='@Url.Action("ProductAction", "Product")'" />
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.product_ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.product_Maker)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.product_Name)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.product_Quantity)
        </th>
   
        <th>
            @Html.DisplayNameFor(model => model.Discounted_Prize)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.product_ID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.product_Maker)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.product_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.product_Quantity)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.Discounted_Prize)
        </td>
        <td>
            @Html.ActionLink( "ProductDetail" , "EditProduct", new { id = item.product_ID }) |
            @Html.ActionLink("Details", "Details", new {  id=item.product_ID  }) |
            @Html.ActionLink("Delete", "Delete", new {  id=item.product_ID })
        </td>
    </tr>
}

</table>
